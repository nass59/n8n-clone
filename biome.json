{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "files": {
    "ignoreUnknown": false,
    "includes": [
      "**",
      "!**/.next",
      "!**/dist",
      "!**/.turbo",
      "!**/.vscode",
      "!**/.source",
      "!**/src/components/ui/*"
    ]
  },
  "extends": ["ultracite/core", "ultracite/next", "ultracite/react"],
  "linter": {
    "rules": {
      "complexity": {
        "noVoid": "off"
      },
      "nursery": {
        "noLeakedRender": "off",
        "noIncrementDecrement": "off"
      },
      "performance": {
        "noNamespaceImport": "off",
        "useTopLevelRegex": "off"
      },
      "style": {
        "noMagicNumbers": "off",
        "useForOf": "off"
      },
      "suspicious": {
        "noConsole": "off"
      }
    }
  },
  "css": {
    "parser": {
      "tailwindDirectives": true
    }
  }
}
